{
  "globals": {
    "ts-jest": {
      "tsconfig": "tsconfig.jest.json"
    }
  },
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json"],
  "transform": {
    "^.+\\.(ts|tsx)$": "ts-jest",
    "^.+\\.css$": "jest-transform-css"
  },
  "testMatch": ["**/src/**/*.spec.(ts|tsx)"],
  "coverageReporters": [["lcov", { "projectRoot": "../.." }]],
  "setupFilesAfterEnv": ["<rootDir>/jest-setup.ts"]
}
